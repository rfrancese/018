<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bdsir.passwordaddressbook.MenuAddressBook"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/menu"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/buttViewAddressBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_view_addressBook" />

        <Button
            android:id="@+id/buttAddService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_add_service" />

        <Button
            android:id="@+id/buttModifyService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_modify_service" />

        <Button
            android:id="@+id/buttRemoveService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_remove_service" />

        <Button
            android:id="@+id/buttModifyPasswordSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_modify_passwordSystem" />

        <Button
            android:id="@+id/buttRecoverPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_recover_password" />

        <Button
            android:id="@+id/buttBackUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_backUp" />

    </LinearLayout>

</FrameLayout>
