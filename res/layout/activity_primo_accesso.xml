<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="horizontal" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightTopAppName"
        android:background="@color/backgroundColorSkyBlue"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/infoTextSize" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_list"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/help1"
                    style="@style/TextViewPersonal"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="@string/help1"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/help2"
                    style="@style/TextViewPersonal"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:text="@string/help2"
                    android:textSize="@dimen/normalTextSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_list"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/TextViewPersonal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/inserisciNumCell"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:id="@+id/editNumCell"
                    style="@style/EditTextPersonal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintText"
                    android:inputType="number" />

                <TextView
                    style="@style/TextViewPersonal"
                    android:gravity="center"
                    android:text="@string/inserisciPassword"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:id="@+id/editInsPassword"
                    style="@style/EditTextPersonal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintText"
                    android:inputType="textPassword" />

                <TextView
                    style="@style/TextViewPersonal"
                    android:gravity="center"
                    android:text="@string/reinserisciPassword"
                    android:textSize="@dimen/normalTextSize" />

                <EditText
                    android:id="@+id/editReinsPassword"
                    style="@style/EditTextPersonal"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/hintText"
                    android:inputType="textPassword" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:gravity="center|bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/buttAnnula"
            style="@style/ButtonAnnulla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttProcedi"
            style="@style/ButtonProcedi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="procedi"
            android:paddingRight="15dp" />

    </LinearLayout>

</LinearLayout>