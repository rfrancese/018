<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="ButtonAnnulla">
        <item name="android:drawableLeft">@drawable/button_annulla</item>
        <item name="android:text">Annulla</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:background">@drawable/background_button</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:minWidth">150dip</item>
    </style>
    
    <style name="ButtonProcedi">
        <item name="android:drawableRight">@drawable/button_procedi</item>
        <item name="android:text">Procedi</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">-3.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">3</item>
		<item name="android:background">@drawable/background_button</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:minWidth">150dip</item>
    </style>
    
    <style name="EditTextPersonal">
        <item name="android:ems">10</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:lines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">end</item>
    </style>
    
    <style name="TextViewPersonal">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
        
</resources>
